<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

    <style name="LogoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/space_16dp</item>
    </style>

    <style name="ViewPagerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/slider_height</item>
        <item name="android:contentDescription">@string/content_desc_slider</item>
        <item name="android:layout_marginBottom">@dimen/space_16dp</item>
    </style>

    <style name="SloganStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/teko_semibold</item>
        <item name="android:textSize">@dimen/slogan_size</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/space_16dp</item>
        <item name="android:layout_marginLeft">@dimen/space_16dp</item>
        <item name="android:layout_marginRight">@dimen/space_16dp</item>
    </style>

    <style name="Titles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/space_16dp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/teko_semibold</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/open_sans</item>
        <item name="android:textSize">@dimen/content_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">@dimen/empty</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_weight">@dimen/weight_1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/text_color_primary</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/teko_semibold</item>
        <item name="android:layout_marginLeft">@dimen/space_36dp</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="Social">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_8dp</item>
    </style>

</resources>
